.waiter
  margin-top 40px
  margin-left 30px
  margin-right 30px
  transition margin-left 0.5s

  .filters
    position fixed
    padding 3px 25px
    z-index 2
    background-color #f6f6f6
    border-radius 50px

    .filter
      border-radius 50px
      margin auto
      transition all .2s ease-in-out
      margin-right 10px

    .filter:hover
      transform scale(1.2)

    .filter_all
      margin auto
      margin-right 25px
      transition all .2s ease-in-out
      border-radius 50px
      vertical-align center

    .filter_all:hover
      transform scale(1.2)

  .dishes
    top 50px
  
  .dishes:after
    content ''
    display block
    clear both

  .dish
    float left

    a
      background-color rgba(120, 120, 120, 0.65)

  .card
    .card-title
      padding 8px 35px
      border-top-right-radius 25px
      border-top-left-radius 25px
      background-color rgba(150, 150, 150, 0.65)